/* pages/car/car.wxss */

.car{
  width: 100%;
}
.headerpic{
  width: 100%;
  height: 310rpx;
}
/* 主体部分 */
.buycontent{
  width: 100%;
  /* border: 1rpx solid red; */
}
.buymoney{
  width: 90%;
  margin: 0 auto;
  /* border: 1px solid red; */
  position: relative;
}
.buytop{
  width: 94%;
  background: #fff;
  border-bottom: 1rpx solid #ccc;
  position: absolute;
  top: -210rpx;
  left: 3%;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 10rpx #666;
  padding: 10rpx 20rpx 20rpx;
  box-sizing: border-box;
}

.shuru{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  height: 40rpx;
  padding: 20rpx 0;
  margin-bottom: 10rpx;
  
}
.shuru>image{
  width: 40rpx;
  height: 40rpx;
}
.shuru>text{
  padding-left: 10rpx;
  font-size: 40rpx;
  line-height: 40rpx;
}
.srinput{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  height: 70rpx;
  justify-content: center;
  border-bottom: 1rpx solid #ccc;
}
.srinput text{
  padding: 15rpx 0;
  font-size: 35rpx;
  color: red;
  font-weight: bold;
}
.srinput input{
  width: 300rpx;
  font-size: 40rpx;
  padding: 10rpx;
  border: 0;
  color: red;
  /* border: 1px solid red; */
}
.inputph{
  font-size: 35rpx;
}
.showcontent{
  width: 94%;
  margin: 110rpx auto 0
}
.showcontent image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 7rpx;
}
.showbox{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  border-bottom: 1rpx dashed #ccc;
  height: 80rpx;
  font-size: 28rpx;
}
.showboxl,.showboxr{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  width: 50%;
  box-sizing: border-box;
}
.totalmoney{
  text-align: center;
  font-size: 45rpx;
  padding: 50rpx 0 50rpx;
}
/* 注明 */
.zhuming{
   padding: 30rpx 0 20rpx;
   color: #666;
}
.zmtitle{
  font-size: 35rpx;
 
}
.zmcontent{
  font-size: 28rpx;
}
.zmcontent text{
  display: block;
  padding-left: 20rpx;
}
/* 点击购买的弹出层 */
.buyceng{
  position: fixed;
  width: 100%;
  top: 0;
  bottom: 0;
  background:rgba(0,0,0,0.6);
  z-index: 100;
}
.buybox{
  width: 100%;
  height: 300rpx;
  background: #fff;
  padding: 10rpx 20rpx;
  position: absolute;
  bottom: 0;
  box-sizing: border-box;
}
.bb{
  font-size: 30rpx;
  padding: 15rpx 0;
  width: 90%;
  margin: 0 auto;
}
.bb text{
color: #bd9c55;
}
.smzhifu{
  border: 1rpx solid #bd9c55;
}
.smzhifu,.cancel{
  width: 90%;
  margin: 0 auto;
  font-size: 30rpx;
}
.cancel{
  margin-top: 15rpx;
  background-color: #eee;
}
/* 支付二维码的弹窗 */
.zhifuceng{
  position: fixed;
  width: 100%;
  top: 0;
  bottom: 0;
  background:rgba(0, 0, 0,0.7);
  z-index:200;
}
.zfcengbox{
  width: 80%;
  height: 550rpx;
  background: #fff;
  position: absolute;
  left: 10%;
  bottom: 30%;
  border-radius: 20rpx; 
}
.zfcancel{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto
}