<!--pages/mybankadd/mybankadd.wxml-->
<!--添加银行卡-->
<view class='bankadd'>
  <view class="bangka">
    <p>请绑定持卡人本人的银行卡</p>
  </view>
  <view class="chikaren">
    <text>持卡人:</text>
    <input type='text' class='name'></input>
    <image src='../../images/gt.png' class='gz'></image>
  </view>
  <view class="chikaren1">
    <text>持卡号:</text>
    <input type='text' class='name'></input>
    <image src='../../images/kakaka2.png' class='gz'></image>
  </view>
  <view class="chikaren2">
    <text>银行名:</text>
    <input type='text' class='name'></input>
    <image src='../../images/kakaka3.png' class='gz'></image>
  </view>
  <view class="chikaren3">
    <text>设置默认银行卡：</text>
    <input type='text' class='name'></input>
    <radio color='#37DCBE'></radio>
  </view>
  <view class='baoc'>保存并且绑定</view>
</view>
