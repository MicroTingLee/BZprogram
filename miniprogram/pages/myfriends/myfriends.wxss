  width: 100%;
  height: 40rpx;
  display: flex;
  margin-top: 8rpx;
}
.friend_bottom .fri_phone{
  width: 40%;
  display: flex;
}
.fri_phone image{
  width: 30rpx;
  height: 30rpx;
  padding-right: 10rpx;
}
.fri_phone .shouj{
  white-space: nowrap;
}
