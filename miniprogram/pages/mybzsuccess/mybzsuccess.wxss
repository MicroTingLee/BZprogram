/* pages/mybzsuccess/mybzsuccess.wxss */
.mybzsuccess {
  width: 100%;
}

.mybzsuccess .data {
  width: 100%;
  height: 200rpx;
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.data .img {
  width: 22%;
  height: 170rpx;
  padding-top: 20rpx;
  padding-left: 15rpx;
  text-align: center;
}
.img image {
  width: 145rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.data .user {
  width: 73%;
  height: 150rpx;
  margin: 20rpx 0;
  color: #777;
}
/* 用户名行 */
.user .mysucc_head{
  width: 100%;
  display: flex;
  height: 50rpx;
  font-size: 28rpx;
  justify-content: space-between;
}
.mysucc_head .name{
  width: 45%;
  display: flex;
}
.mysucc_head image{
  width: 35rpx;
  height: 35rpx;
   margin-right: 5rpx;
}
.mysucc_head .time{
  white-space: nowrap;
}
/* 普通报账行 */
.user .mysucc_center{
  width: 100%;
  display: flex;
  height: 50rpx;
  font-size: 28rpx;
  justify-content: space-between;
  margin-top: 10rpx;
}
.mysucc_center .su_puto{
  width: 45%;
  display: flex;
  white-space: nowrap;

}
.su_puto image{
  width: 35rpx;
  height: 35rpx;
   margin-right: 5rpx;
}
.quan{
  width: 48%;
  display: flex;
  white-space: nowrap;
}
.quan image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 5rpx;
}
.yhq{
  color: #f00;
}
/* //店铺行 */
.user .mysucc_bottom{
  width: 100%;
  display: flex;
  height: 50rpx;
  font-size: 28rpx;
  justify-content: space-between;
  margin-top: 5rpx;
}
.su_dianpu{
  display: flex;
  width: 100%;
}
.mysucc_bottom image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 5rpx;
}