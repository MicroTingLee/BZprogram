/* pages/myorder/myorder.wxss */
.order {
  width: 100%;
   background: #eaeaea;
}
.swiper-tab{
  padding-top: 10rpx;
    width: 100%;
    display: flex;
    flex-flow: row;
    justify-content: space-around;
}
.swiper-tab-item{
    width: 20%; 
    color:#434343;
      text-align: center;
}
.active{
    color:rgb(76, 224, 197);
    border-bottom: 4rpx solid rgb(76, 224, 197);
}
.swiper {
  width: 100%;
  height: 100%;
  display: flex;
  position: fixed;
}
.swiper-tab-item {
  text-align: center;
  width: 20%;
}
scroll-view {
  width: 100%;
  height: 93%; /*动态高度*/
}

/* 报账卡 */
.ord_baozhang{
  width: 100%;
  height: 360rpx;
  background: #eaeaea;
}

.ord_baozhang .baozhang_head {
  width: 98%;
  height: 60rpx;
  background: #fff;
  margin: 0 auto;
  display: flex;
  line-height: 60rpx;
}
.baozhang_head .bz_img {
  width: 20%;
  height: 70rpx;
}
.bz_img image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
  margin-left: 70rpx;
}

.baozhang_head .sear {
  font-size: 28rpx;
  color: #aaa;
}

/* 报账卡内容 */
.ord_baozhang .bz_content {
  width: 98%;
  height: 260rpx;
  background: #fff;
  margin: 10rpx auto;
  display: flex;
  justify-content: space-around;
}
.bz_content .bz_left{
   width: 24%;
  height: 200rpx;
  margin-top: 45rpx;
  padding-left: 10rpx;
}
.bz_left image{
  width:160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.bz_content .bz_right{
 width: 75%;
  height: 200rpx;
  margin-top: 10rpx;
  padding: 20rpx 0 0 0rpx; 
  box-sizing: border-box;
  font-size: 25rpx;
}
.bz_right .bz_head{
  width: 100%;
  height: 60rpx;
  display: flex;
  color: #777;
  line-height: 60rpx;
  white-space:nowrap;
}
.bz_head .danhao{
 margin-right: 20rpx;
 font-size: 27rpx;
}
.bz_head text{
  color: black;
}
.bz_center{
 display: flex;
  height: 60rpx;
  line-height: 60rpx;
  white-space: normal;
}
.bz_center text{
  color: #f00;
}
.bz_center .hji{
  margin-left: 25rpx;
}
.bz_center .fuk{
  width: 130rpx;
  height: 50rpx;
  border: 1rpx solid red;
  text-align: center;
  line-height: 50rpx;
  margin-left: 20rpx;
  color: #f00;
  border-radius: 20rpx;
}
.bz_bottom{
   margin-top: 20rpx;
  display: flex;
  white-space: normal;
  justify-content: space-between;
}
.bz_bottom .pj{
   width: 135rpx;
  height: 45rpx;
  border: 1rpx solid red;
  text-align: center;
  line-height: 45rpx;
  margin-left: 20rpx;
  color: #f00;
  border-radius: 20rpx;
  margin-right: 50rpx;
}